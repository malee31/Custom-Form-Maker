<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include("/partials/head", {title: "Form"}); %>
		<link href="/static/css/index.css" rel="stylesheet" type="text/css">
	</head>
	<body>
		<div class="loadWheel infinite-spin" <%- (typeof show !== "undefined" && show ? "" : 'style="visibility: hidden;"') %>></div>
		<section class="floatBox" id="errorBox" style="display: none; opacity: 0;">
			<h1 id="errorName">Error</h1>
			<p id="errorDesc">Something has gone wrong! Try again in a moment.</p>
			<button onclick="toggleErrorBox(false)">Ok</button>
		</section>
		<form action="/" enctype="application/x-www-form-urlencoded" method="POST">
			<label for="sheetId">
				Generate from Google Sheet ID
			</label>
			<input id="sheetId" name="sheetId" type="text">
			<label for="createId">
				Jump to Pre-existing Form
			</label>
			<input id="createId" name="createId" type="text">
			<div id="buttons-div">
				<a id="create" onclick="toggleLoader(true)" href="/create"><span>Create/Edit</span></a>
				<input id="submit" onclick="toggleLoader(true)" type="submit">
			</div>
		</form>
		<script src="/static/js/utilities.js"></script>
		<script src="/static/js/index.js"></script>
	</body>
</html>
